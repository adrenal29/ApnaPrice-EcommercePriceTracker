// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model products{
  id String @id @default (auto()) @map("_id") @db.ObjectId
  url String
  image String
}
model user{
  id String @id @default (auto()) @map("_id") @db.ObjectId
  name String
  isVendor Boolean
  email String @unique
  hashedPassword String?
  wishlist String[]
}
model store{
  id String @id @default (auto()) @map("_id") @db.ObjectId
  storeOwner String
  storeName String @unique
  storeAddress String
  storeCategory String
  storeBanner String
  storeLayout String 
}

